<%include ../header%>
<form method='post' action="/users/reg" class='form-horizontal'role="form">
    <div class="form-group">
        <label class="col-md-2 control-label">用户名</label>
        <div class="col-md-8">
            <input type="text" name='username'placeholder='请输入用户名' class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">密码</label>
        <div class="col-md-8">
            <input type="password" placeholder='请输入' name="password" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">密码</label>
        <div class="col-md-8">
            <input type="password" name='password_repeat'placeholder='请输入' class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">邮箱</label>
        <div class="col-md-8">
            <input type="email" name="email" placeholder='请输入邮箱' class="form-control"/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-md-8">
            <button class="btn btn-default" type="submit" />注册</button>
        </div>
    </div>
</form>

<%include ../footer%>
